<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_weight="0.07">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:text=" ID:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/tid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="12"
            android:enabled="false"
            android:inputType="number"
            android:singleLine="?attr/isLightTheme" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:text=" MatrÃ­cula:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/tnumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="12"
            android:inputType="number"
            android:maxLength="9"
            android:singleLine="?attr/isLightTheme" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:text=" Nome:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/tnome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="12"
            android:inputType="textPersonName"
            android:maxLength="50" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:text=" E-mail:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/temail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="12"
            android:inputType="textEmailAddress"
            android:maxLength="50" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:text=" Curso:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/tcurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="12"
            android:inputType="text"
            android:maxLength="50" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text=" Ano Ingresso.:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/tano"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@android:color/background_light"
            android:ems="12"
            android:inputType="number"
            android:maxLength="4" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:text="Cancela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncancela"
            android:layout_weight="1" />

        <Button
            android:text="COnfirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnconfirma"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>